{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "paths": {
      "@peek/config": ["apps/peek/src/config"],
      "@peek/config/*": ["apps/peek/src/config/*"],
      "@peek/constant": ["apps/peek/src/constant"],
      "@peek/constant/*": ["apps/peek/src/constant/*"],
      "@peek/decorator": ["apps/peek/src/decorator"],
      "@peek/decorator/*": ["apps/peek/src/decorator/*"],
      "@peek/handler": ["apps/peek/src/handler"],
      "@peek/handler/*": ["apps/peek/src/handler/*"],
      "@peek/module": ["apps/peek/src/module"],
      "@peek/module/*": ["apps/peek/src/module/*"],
      "@peek/type": ["apps/peek/src/type"],
      "@peek/type/*": ["apps/peek/src/type/*"],

      "@peek-admin/config": ["apps/peek-admin/src/config"],
      "@peek-admin/config/*": ["apps/peek-admin/src/config/*"],
      "@peek-admin/constant": ["apps/peek-admin/src/constant"],
      "@peek-admin/constant/*": ["apps/peek-admin/src/constant/*"],
      "@peek-admin/decorator": ["apps/peek-admin/src/decorator"],
      "@peek-admin/decorator/*": ["apps/peek-admin/src/decorator/*"],
      "@peek-admin/handler": ["apps/peek-admin/src/handler"],
      "@peek-admin/handler/*": ["apps/peek-admin/src/handler/*"],
      "@peek-admin/module": ["apps/peek-admin/src/module"],
      "@peek-admin/module/*": ["apps/peek-admin/src/module/*"],
      "@peek-admin/type": ["apps/peek-admin/src/type"],
      "@peek-admin/type/*": ["apps/peek-admin/src/type/*"],

      "@constant/enum": ["libs/constant/src/enum"],
      "@constant/enum/*": ["libs/constant/src/enum/*"],
      "@constant/jwt": ["libs/constant/src/jwt"],
      "@constant/jwt/*": ["libs/constant/src/jwt/*"],

      "@database/decorators": ["libs/database/src/decorators"],
      "@database/decorators/*": ["libs/database/src/decorators/*"],
      "@database/entities": ["libs/database/src/entities"],
      "@database/entities/*": ["libs/database/src/entities/*"],
      "@database/repositories": ["libs/database/src/repositories"],
      "@database/repositories/*": ["libs/database/src/repositories/*"]
    }
  }
}
