{
  "name": "peek-be",
  "version": "1.0.0",
  "private": true,
  "author": "jm4293",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "concurrently --names \"PEEK\" -c \"blue\" \"nest start peek\"",
    "start:dev": "concurrently --names \"PEEK\" -c \"blue\" \"nest start --watch peek\"",
    "start:debug": "concurrently --names \"PEEK\" -c \"blue\" \"nest start --debug --watch peek\"",
    "start-dev:debug": "concurrently --names \"ADMIN\" -c \"green\" \"nest start --debug --watch peek-admin\"",
    "start:prod": "concurrently --names \"PEEK\" -c \"blue\" \"node dist/apps/peek/main\"",
    "start:peek:dev": "nest start --watch peek",
    "build-rm": "rm -rf dist",
    "node_modules-rm": "rm -rf ./node_modules"
  },
  "dependencies": {
